@using System.Text
@model List<MvcOOPHamburgerProject.Data.Entities.Concrete.Testimonial>

<!-- client section -->
<section class="client_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center psudo_white_primary mb_45">
            <h2 class="border-bottom fw-normal mb-3"">
                What Says Our Customers
            </h2>
            <hr />
        </div>
        <div class="carousel-wrap row ">
            <div class="owl-carousel client_owl-carousel">
                @foreach (var testimonial in Model)
                {
                    <div class="item">
                        <div class="box">
                            <div class="detail-box">
                                <p>
                                    @testimonial.Description
                                </p>
                                <h6>
                                    @testimonial.Title
                                </h6>
                                <p>
                                    @for (decimal i = 0; i < testimonial.Puan; i++)
                                    {
                                        <i class='fa-solid fa-star me-1' style="color: #ffbe33"></i>
                                    }
                                </p>
                            </div>
                            <div class="img-box">
                                <img src="~/customer/images/@testimonial.ImageUrl" alt="" class="box-img">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <hr />
</section>
<!-- end client section -->

