@model List<About>

<!-- about section -->
<section class="about_section layout_padding">
        <h2 class=" text-secondary fw-light">About Us</h2>
        <hr />
        <div id="aboutCarousel" class="carousel slide row" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="img-box">
                                    <img src="~/customer/images/@Model[i].ImageUrl" class="img-fluid" alt="icon" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-box">
                                    <div class="heading_container">
                                        <h2>@Model[i].Title</h2>
                                    </div>
                                    <p>@Model[i].Description</p>
                                    <a asp-area="" asp-controller="Home" asp-action="About">Read More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#aboutCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#aboutCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
    <hr />
</section>
<!-- end about section -->

