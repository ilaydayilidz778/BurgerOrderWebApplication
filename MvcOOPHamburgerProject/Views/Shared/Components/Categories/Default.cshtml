<style>
    .container {
        overflow-x: auto;
    }

    .row {
        display: flex;
        flex-wrap: nowrap; /* Yatayda sıralı kalmasını sağlar */
    }

    .col-lg-4 {
        flex: 0 0 auto; /* Genişliği sabitler, taşma durumunda kaydırmak için */
        width: 33.33333%; /* Kartların ekranın üçte birini kaplamasını sağlar */
        max-width: 33.33333%; /* Maksimum genişlik belirlenir */
    }

    .card {
        position: relative;
        background: linear-gradient(to bottom, white 50%, rgb(44, 49, 52) 50%);
        text-align: center;
        padding: 40px 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Kutu gölgesi ekler */
        overflow: hidden; /* İçeriğin sınırlarını aşan kısmı gizler */
        transition: background-color 0.3s ease; /* Geçiş efekti ekler */
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background: rgb(230, 156, 0);
        }

            .card:hover img {
                transform: translateY(-10px);
            }

        .card img {
            transition: transform 0.3s ease;
            margin-bottom: 10px; /* İkonların altında biraz boşluk bırakır */
            font-size: 50px; /* İkon boyutunu büyütür */
        }

        /* "a" etiketinin rengini ve alt çizgisini ayarlar */
        .card a {
            color: rgb(230, 156, 0); /* Bağlantı rengi sarı */
            text-decoration: none; /* Alt çizgiyi kaldırır */
            display: block; /* Bağlantıyı blok element haline getirir */
            padding: 10px; /* Kenar boşluğu ekler */
            font-weight: bold; /* Kalın font */
            text-align: center; /* Metni ortala */
        }

            .card a:hover {
                background-color: rgb(230, 156, 0); /* Hover durumunda arka plan rengini sarı yapar */
                color: white; /* Hover durumunda metin rengini beyaz yapar */
            }

    /* İkonların rengini ve boyutunu ayarlar */
    .icon {
        color: rgb(230, 156, 0); /* İkon rengi sarı */
        font-size: 50px; /* İkon boyutunu büyütür */
    }

    /* Hover durumunda ikonların ve yazıların rengini beyaz yapar */
    .card:hover .icon,
    .card:hover a {
        color: white;
    }

    ::-webkit-scrollbar {
        height: 5px;
        width: 8px;
    }

    ::-webkit-scrollbar-thumb {
        background-color: rgb(230, 156, 0);
        border-radius: 20px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background-color: rgb(230, 156, 0);
        }
</style>

<div class="container">
    <h2 class="mb-3" style="text-align: center; font-weight: bold;">Categories</h2>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-lg-3 col-md-4 mb-5">
                <div class="card h-100">
                    <!-- Resimlere tıklandığında OurMenu action'ına git -->
                    <a asp-area="" asp-controller="Home" asp-action="OurMenu" asp-route-categoryId="@category.Id">
                        <img class="card-img-top" src="~/customer/img/category/@category.ImageUrl" alt="" height="200px">
                        <div class="card-body">
                            <h4 class="card-title">@category.Name</h4>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>