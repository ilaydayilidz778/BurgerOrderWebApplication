<style>
    .categories .container {
        overflow-x: auto;
    }

    .categories .row {
        display: flex;
        flex-wrap: nowrap;
    }

    .categories .col-lg-4 {
        flex: 0 0 auto;
        width: 33.33333%;
        max-width: 33.33333%;
    }

    .categories .card {
        position: relative;
        background: linear-gradient(to bottom, white 50%, rgb(44, 49, 52) 50%);
        text-align: center;
        padding: 40px 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: background-color 0.3s ease;
    }

        .categories .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background: rgb(230, 156, 0);
        }

            .categories .card:hover img {
                transform: translateY(-10px);
            }

        .categories .card img {
            transition: transform 0.3s ease;
            margin-bottom: 10px;
            font-size: 50px;
        }

        .categories .card a {
            color: rgb(230, 156, 0);
            text-decoration: none;
            display: block;
            padding: 10px;
            font-weight: bold;
            text-align: center;
        }

            .categories .card a:hover {
                background-color: rgb(230, 156, 0);
                color: white;
            }

    .categories .icon {
        color: rgb(230, 156, 0);
        font-size: 50px;
    }

    .categories .card:hover .icon,
    .categories .card:hover a {
        color: white;
    }

    .categories ::-webkit-scrollbar {
        height: 5px;
        width: 8px;
    }

    .categories ::-webkit-scrollbar-thumb {
        background-color: rgb(230, 156, 0);
        border-radius: 20px;
    }

        .categories ::-webkit-scrollbar-thumb:hover {
            background-color: rgb(230, 156, 0);
        }
</style>

<section class="categories"> 
<div class="container">
    <h2 class="mb-3" style="text-align: center; font-weight: bold;">Categories</h2>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-lg-3 col-md-4 mb-5">
                <div class="card h-100">
                    <!-- Resimlere tıklandığında OurMenu action'ına git -->
                    <a asp-area="" asp-controller="Home" asp-action="OurMenu" asp-route-categoryId="@category.Id">
                        <img class="card-img-top" src="~/customer/img/category/@category.ImageUrl" alt="" height="200px">
                        <div class="card-body">
                            <h4 class="card-title">@category.Name</h4>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
</section>